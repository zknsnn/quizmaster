<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CreateUpdateQuizController">
    <Label fx:id="titelLabel" layoutX="399.0" layoutY="137.0" text="Nieuwe Quiz">
        <font>
          <Font size="18.0" />
        </font>
    </Label>
    <GridPane layoutX="336.0" layoutY="204.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
        <Label text="Quiznaam" />
        <Label text="Quizlevel" GridPane.rowIndex="1" />
        <Label text="Cursus" GridPane.rowIndex="3" />
        <Label text="Succesdefinitie" GridPane.rowIndex="2" />
        <TextField fx:id="quizNaamTextfield" GridPane.columnIndex="1" />
        <TextField fx:id="quizSuccesDefinitieTextfield" promptText="in procenten" GridPane.columnIndex="1" GridPane.rowIndex="2">
         <effect>
            <Blend />
         </effect></TextField>
      <ComboBox fx:id="quizLevelComboBox" prefWidth="150.0" promptText="Level" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      <ComboBox fx:id="quizCursusCombobox" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
    </GridPane>
    <Button layoutX="335.0" layoutY="372.0" mnemonicParsing="false" onAction="#doCreateUpdateQuiz" text="Opslaan">
      <font>
         <Font size="14.0" />
      </font></Button>
    <Button layoutX="425.0" layoutY="372.0" mnemonicParsing="false" onAction="#doMenu" text="Menu">
      <font>
         <Font size="14.0" />
      </font></Button>
   <Button layoutX="500.0" layoutY="372.0" mnemonicParsing="false" onAction="#dashboardMenu" text="Dashboard">
      <font>
         <Font size="14.0" />
      </font></Button>
</AnchorPane>
